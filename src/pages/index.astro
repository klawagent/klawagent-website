<style>
/* HERO */
.hero { padding:60px 48px 80px; max-width:var(--max); margin:0 auto; display:grid; grid-template-columns:1fr 1.3fr; gap:56px; align-items:center; min-height:calc(100vh - var(--nav-h)); }
.hero h1 { font-size:clamp(3rem,5vw,5.2rem); line-height:1.05; margin-bottom:20px; }
.hero p { font-size:1.05rem; color:var(--muted); margin-bottom:32px; max-width:400px; line-height:1.7; }
.hero-card { position:relative; border-radius:28px; overflow:hidden; box-shadow:0 6px 32px rgba(0,0,0,.08),inset 0 0 0 2px rgba(17,17,17,.18); background:#e8e2da; aspect-ratio:640/500; }
.hero-card img { width:100%; height:100%; object-fit:cover; object-position:center 10%; display:block; }
.hero-badge { position:absolute; bottom:18px; right:18px; background:var(--accent); color:#fff; border-radius:50%; width:74px; height:74px; display:flex; align-items:center; justify-content:center; text-align:center; font-size:0.62rem; font-weight:700; line-height:1.3; text-transform:uppercase; letter-spacing:.04em; }

/* TWO-COL */
.two-col { display:grid; grid-template-columns:1fr 1fr; gap:80px; align-items:center; }
.two-col.flip .img-col { order:-1; }
.two-col h2 { font-size:clamp(2rem,3.2vw,3.5rem); line-height:1.1; margin-bottom:20px; }
.two-col p { font-size:1rem; color:var(--muted); line-height:1.75; margin-bottom:28px; }
.img-col { border-radius:20px; overflow:hidden; box-shadow:0 4px 0 rgba(0,0,0,.08); border:1px solid var(--border-light); }
.img-col img { width:100%; height:auto; display:block; }
.icon-row { display:flex; gap:10px; margin:0 0 28px; }
.i-circle { width:44px; height:44px; border-radius:50%; background:var(--card); border:1px solid var(--border-light); display:flex; align-items:center; justify-content:center; font-size:1.1rem; }
.pills { display:grid; grid-template-columns:1fr 1fr; gap:10px; }
.pill { display:flex; align-items:center; gap:10px; background:var(--card); border:1px solid var(--border-light); border-radius:999px; padding:11px 16px; font-size:0.85rem; font-weight:500; box-shadow:0 2px 0 rgba(0,0,0,.05); }
.pill-ico { width:28px; height:28px; border-radius:50%; background:var(--bg); border:1px solid var(--border-light); display:flex; align-items:center; justify-content:center; font-size:0.8rem; flex-shrink:0; }

/* TEAM */
.team-s { text-align:center; }
.team-s h2 { font-size:clamp(2rem,3.2vw,3.5rem); margin-bottom:16px; }
.team-sub { color:var(--muted); font-size:1rem; max-width:640px; margin:0 auto 48px; }
.task-grid { display:grid; grid-template-columns:repeat(3,1fr); gap:12px; }
.task-item { display:flex; align-items:center; gap:10px; background:var(--card); border:1px solid var(--border-light); border-radius:999px; padding:14px 20px; font-size:0.875rem; box-shadow:0 2px 0 rgba(0,0,0,.05); }
.task-check { width:24px; height:24px; border-radius:50%; background:var(--accent); color:#fff; display:flex; align-items:center; justify-content:center; font-size:0.7rem; flex-shrink:0; }

/* API DARK */
.api-s { background:#111111; color:#fff; padding:96px 48px; text-align:center; }
.api-label { display:inline-block; background:var(--accent); color:#fff; border-radius:999px; padding:6px 16px; font-size:0.68rem; font-weight:700; letter-spacing:.12em; text-transform:uppercase; margin-bottom:24px; }
.api-s h2 { font-family:var(--serif); font-size:clamp(2rem,3.2vw,3.5rem); font-weight:700; color:#fff; margin-bottom:16px; }
.api-sub { color:#888; font-size:1rem; max-width:520px; margin:0 auto 52px; }
.api-logos { display:flex; flex-wrap:wrap; justify-content:center; gap:12px; max-width:860px; margin:0 auto 20px; }
.api-logo { background:#1c1c1c; border:1px solid #2a2a2a; border-radius:16px; padding:14px 18px; display:flex; flex-direction:column; align-items:center; gap:8px; min-width:88px; }
.api-logo .ico { width:38px; height:38px; border-radius:10px; display:flex; align-items:center; justify-content:center; font-size:1rem; font-weight:800; color:#fff; font-family:var(--sans); }
.api-logo .nm { font-size:0.68rem; color:#999; text-align:center; }
.api-more { color:#555; font-size:0.85rem; }
.api-more a { color:var(--accent); }

/* WHY */
.why-s { text-align:center; }
.why-label { display:inline-block; border:1px solid var(--border-light); border-radius:999px; padding:6px 16px; font-size:0.68rem; font-weight:600; letter-spacing:.12em; text-transform:uppercase; margin-bottom:24px; color:var(--muted); }
.why-s h2 { font-size:clamp(2rem,3.2vw,3.5rem); margin-bottom:16px; }
.why-sub { color:var(--muted); font-size:1rem; max-width:580px; margin:0 auto 48px; }
.why-grid { display:grid; grid-template-columns:repeat(3,1fr); gap:16px; }
.why-card { background:var(--card); border:1px solid var(--border-light); border-radius:20px; padding:28px; text-align:left; box-shadow:0 4px 0 rgba(0,0,0,.05); }
