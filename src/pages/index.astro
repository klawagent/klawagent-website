/* FAQ */
.faq-list { display:flex; flex-direction:column; gap:10px; }
.faq-item { background:var(--card); border:1px solid var(--border); border-radius:28px; box-shadow:0 4px 0 rgba(0,0,0,.07); overflow:hidden; }
